#!/usr/bin/env bash


indent() {
    sed -u "s/^/       /"
}

puts-step() {
    echo "-----> $@"
}

BUILD_DIR=$1


puts-step "Collecting static" 
python $BUILD_DIR/manage.py collectstatic --noinput  2>&1 | sed '/^Copying/d;/^$/d;/^ /d' | indent

puts-step "Compressing" 
python $BUILD_DIR/manage.py compress 2>&1 | indent

puts-step "Migrating" 
python $BUILD_DIR/manage.py migrate
